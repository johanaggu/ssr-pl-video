<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Muli&display=swap" rel="stylesheet">
  <!-- Styles -->
  <link rel="stylesheet" href="/static/css/initial-view.css">
  <!-- Title -->
  <title>PlatziVideo</title>
  <link rel="shortcut icon" href="/static/assets/play-icon.png" type="image/x-icon">
</head>
<body>
  <header class="header">
    <a href="/initial-view"><img class="header__img" src="/static/assets/k.png" alt="Logo"></a>
    <div class="header__menu">
      <div class="header__menu--profile">
        <img src="/static/assets/user-icon.png" alt="">
        <p id="profileName"><%= nameUser %></p>
        <p id="userId" style="display: none;" ><%= userId %></p>
      </div>
      <ul>
        <!-- <li><a href="/">Cuenta</a></li> -->
        <li id="logoutButton" >Cerrar Sesión</li>
      </ul>
    </div>
  </header>

  <section class="main">
    <h2 class="main__title">¿Qué quieres ver hoy?</h2>
    <input type="text" class="input" placeholder="Buscar...">
  </section>

  <h3 class="categories__title">Mi lista</h3>
  <section class="carousel">
    <div class="carousel__container">
      <% userMoviesListed.forEach((movie)=>{ %>
      <div class="carousel-item">
        <img class="carousel-item__img" src="<%= movie.movieId.img_url %>"  alt=""  />
        <div class="carousel-item__details">
          <div>             
            <img onclick=playButton("<%= movie.movieId.video_url %>")  class="carousel-item__details--img" src="/static/assets/play-icon.png" alt="Play Icon">
            <img onclick=removeButton("<%= movie._id %>") class="carousel-item__details--img" src="/static/assets/remove-icon.png" alt="Plus Icon">
          </div>
          <!--  SRC VIDEO -->
          <div class="auto" id="auto" style="display: none;">
          </div>
          <p class="carousel-item__details--title"><%= movie.movieId.title %></p>
          <p class="carousel-item__details--subtitle">Year <%= movie.movieId.year %> </p>
        </div>
      </div>
      <% }) %>
    </div>
  </section>
  <!-- Tendencias -->
  <h3 class="categories__title">Tendencias</h3>
  <section class="carousel">
    <div class="carousel__container">
      <% movies.forEach((movie)=>{ %>
      <div class="carousel-item">
        <img class="carousel-item__img" src="<%= movie.img_url %>"  alt=""  />
        <div class="carousel-item__details">
          <div>             
            <img onclick=playButton("<%= movie.video_url %>")  class="carousel-item__details--img" src="/static/assets/play-icon.png" alt="Play Icon">
            <img onclick=addButton("<%= movie._id %>") class="carousel-item__details--img" src="/static/assets/plus-icon.png" alt="Plus Icon">
          </div>
          <!--  SRC VIDEO -->
          <div class="auto" id="auto" style="display: none;">
          </div>
          <p class="carousel-item__details--title"><%= movie.title %></p>
          <p class="carousel-item__details--subtitle">Year <%= movie.year %> </p>
        </div>
      </div>
      <% }) %>
    </div>
  </section>

  <h3 class="categories__title">Originales de PlatziVideo</h3>

  <section class="carousel">
    <div class="carousel__container">
      <% movies.forEach((movie)=>{ %>
      <div class="carousel-item">
        <img class="carousel-item__img" src="<%= movie.img_url %>" alt="<%= movie.title %>"  />
        <div class="carousel-item__details">
          <div>             
            <img onclick=playButton("<%= movie.video_url %>") class="carousel-item__details--img" src="/static/assets/play-icon.png" alt="Play Icon">
            <img onclick=addButton("<%= movie._id %>") class="carousel-item__details--img" src="/static/assets/plus-icon.png" alt="Plus Icon">
          </div>
          <p class="carousel-item__details--title"><%= movie.title %></p>
          <p class="carousel-item__details--subtitle">Year <%= movie.year %> </p>
        </div>
      </div>
      <% }) %>
    </div>
  </section>
  
  <footer class="footer">
    <a href="/">Terminos de uso</a>
    <a href="/">Declaración de privacidad</a>
    <a href="/">Centro de ayuda</a>
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="/static/js/initial-view.js"></script>
  
</body>
</html>
